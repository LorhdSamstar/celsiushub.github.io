<script>
    var menu = document.getElementById("menu-ham");
    var closee = document.getElementById("closee");
    var links = document.getElementById("links");
    var content = document.getElementById("content-word");

    function show(){
        links.style.display = "block";
        links.style.top = "1000px";
        links.style.transition = ".5s ease";
        menu.style.display = "none";
        content.style.display = "none";
        closee.style.display = "block";
    }

    function closes(){
        links.style.display = "none";
        links.style.top = "1000px";
        links.style.transition = ".5s";
        menu.style.display = "block";
        content.style.display = "block";
        closee.style.display = "none";
    }
</script>
